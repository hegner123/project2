<!-- Header/Title -->
<div class="jumbotron jumbotron-fluid bg-success text-white mb-0">
  <div class="container text-white">
    <h1 class="display-3 font-weight-bold">The Breakfast Club</h1>
    <h5 class="font-weight-light">“If we encounter a man of rare intellect, we should ask him what books he reads.” – Ralph Waldo Emerson</p>
    <a class="btn btn-dark btn-lg" href="/create-account" role="button">Sign Up</a>
    <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
  </div>
</div>

<!-- Sliders -->
<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/new_releases_final.jpg" class="d-block w-100" alt="New Releases">
      </div>
      <div class="carousel-item">
        <img src="/images/electronic_books_final.jpg" class="d-block w-100" alt="Electronic Books">
      </div>
      <div class="carousel-item">
        <img src="/images/book_reviews_final.jpg" class="d-block w-100" alt="Book Reviews">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- Search Inventory -->
<div class="jumbotron jumbotron-fluid bg-secondary mb-0">
  <div class="container text-dark">
    <h1 class="display-3 font-weight-bold pb-5 text-white">Search Book Inventory</h1>
    <div class="row">
      <div class="col-sm-4">
        <form>
          <div class="form-group text-white">
            <label for="exampleInputEmail1">Search Book Titles For Availability</label>
            <input type="search" class="form-control" id="book_search" aria-describedby="searchHelp"
              placeholder="Enter Book Title">
          </div>
          <button type="submit" class="btn btn-dark btn-block" id="searchBtn">Submit</button>
        </form>
      </div>
      <div class="col-sm-7 border border-white mt-2 ml-5" id="list">
        <h2 class="text-center text-white mt-2">Would you like to check-out?</h2>
        <ul id="result-list" class="list-group text-white border no-border mb-2">
          {{#each bookList}}
          <li data-id="{{this.book_id}}" class="list-group-item">
            <a href="example/{{this.book_id}}">{{this.title}}</a>
            <button class="btn  float-right chkoutBtn mr-2" id= "{{this.book_id}}" value ="{{this.title}}">Checkout</button>
            <button class="btn  float-right ">More Details</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Book Reviews -->
