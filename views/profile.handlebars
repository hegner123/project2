<!-- Header/Title -->
<div class="container-fluid">
  <div class="row bg-success">
  <div class="container">
    <div class="row">
      <div class="col-6">
        <h1 class="display-3 font-weight-bold text-white ">Profile</h1>
      </div>
    </div>
    </div>
  </div>

<!-- Form -->

  <div class="row">
    <div class="col-5 mt-3">
      <img src="./images/profile_pic.jpg" class="img-fluid" alt="Profile Picture">
    </div>
    <div class="form-group col-5 text-center mt-5">
      <h3>Profile</h3>
      <div class="row">
        <div class="col-12 text-left">
          <ul>
            <li class="profile-info-display">Email: <span id="profile-email"></span></li>
            <li class="profile-info-display">Name: <span id="profile-name"></span></li>
            <li class="profile-info-display">Address: <span id="profile-address"></span></li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-12 text-center">
          <button id="logout" class="btn btn-secondary col-12 col-lg-4 col-md-4">Logout</button>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-12 text-center">
          <button id="delete-btn" class="btn bg-danger col-12 col-lg-4 col-md-4 text-white">Delete Profile</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal delete-modal" tabindex="-1" role="dialog" id="delete-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Deleting your profile will delete any and all information associated with your account permanatley.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="delete-account" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>


<!-- Footer -->
<div class="container-fluid p-0 fixed-bottom">
  <div class="bg-dark">
    <ul class="nav justify-content-center bg-dark pt-3 pb-2">
      <p class="text-white">The Breakfast Club - Copyright 2019 Â©</p>
    </ul>
  </div>
</div>


